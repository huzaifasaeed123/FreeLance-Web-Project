<%- include('partials/header') %>

<style>
    .form-input, .form-select {
        background: rgba(255, 255, 255, 0.95);
        transition: all 0.3s ease;
    }
    .form-input:focus, .form-select:focus {
        background: white;
        transform: translateY(-2px);
        box-shadow: 0 10px 30px rgba(245, 158, 11, 0.3);
    }
    .form-input::placeholder { color: #9ca3af; }
    .error-message {
        color: #ef4444;
        font-size: 0.875rem;
        margin-top: 0.5rem;
        display: none;
    }
    .error-message.show { display: block; }
</style>

<!-- Reservation Form Section -->
<section class="min-h-screen gradient-bg relative overflow-hidden pt-32 pb-20">
    <div class="absolute inset-0 opacity-10">
        <div class="absolute top-0 left-0 w-full h-full" style="background-image: radial-gradient(circle, rgba(245, 158, 11, 0.3) 1px, transparent 1px); background-size: 50px 50px;"></div>
    </div>

    <div class="relative z-10 max-w-2xl mx-auto px-6">
        <div class="bg-gradient-to-br from-blue-900 to-blue-950 rounded-3xl p-8 md:p-12 shadow-2xl border-2 border-blue-800">
            <div class="text-center mb-10">
                <h1 class="font-fredoka text-4xl md:text-5xl lg:text-6xl text-white mb-4 leading-tight">
                    RESERVE<br/>YOUR DROP
                </h1>
            </div>

            <form id="reservationForm" class="space-y-6">
                <div>
                    <label for="name" class="block text-white font-bold text-sm mb-3">Your Name</label>
                    <input type="text" id="name" name="name" required
                           class="form-input w-full px-6 py-4 rounded-xl border-2 border-transparent focus:border-gold focus:outline-none text-navy font-medium text-base"
                           placeholder="Enter your full name">
                    <div class="error-message" id="nameError">Please fill out this field.</div>
                </div>

                <div>
                    <label for="email" class="block text-white font-bold text-sm mb-3">Your Email</label>
                    <input type="email" id="email" name="email" required
                           class="form-input w-full px-6 py-4 rounded-xl border-2 border-transparent focus:border-gold focus:outline-none text-navy font-medium text-base"
                           placeholder="Enter your email">
                    <div class="error-message" id="emailError">Please fill out this field.</div>
                </div>

                <div>
                    <label for="zipcode" class="block text-white font-bold text-sm mb-3">Zip Code</label>
                    <input type="text" id="zipcode" name="zipcode" required
                           class="form-input w-full px-6 py-4 rounded-xl border-2 border-transparent focus:border-gold focus:outline-none text-navy font-medium text-base"
                           placeholder="Enter your zip code">
                    <div class="error-message" id="zipcodeError">Please fill out this field.</div>
                </div>

                <div>
                    <label for="product" class="block text-white font-bold text-sm mb-3">Choose Product</label>
                    <select id="product" name="product" required
                            class="form-select w-full px-6 py-4 rounded-xl border-2 border-transparent focus:border-gold focus:outline-none text-navy font-medium text-base appearance-none cursor-pointer"
                            style="background-image: url('data:image/svg+xml;charset=UTF-8,%3csvg xmlns=%27http://www.w3.org/2000/svg%27 viewBox=%270 0 24 24%27 fill=%27none%27 stroke=%27currentColor%27 stroke-width=%272%27 stroke-linecap=%27round%27 stroke-linejoin=%27round%27%3e%3cpolyline points=%276 9 12 15 18 9%27%3e%3c/polyline%3e%3c/svg%3e'); background-repeat: no-repeat; background-position: right 1rem center; background-size: 1.5em 1.5em;">
                        <option value="">—Please choose an option—</option>
                        <option value="Watermelon">Watermelon</option>
                        <option value="Blueberry">Blueberry</option>
                        <option value="Watermelon Zero">Watermelon Zero</option>
                        <option value="Blueberry Zero">Blueberry Zero</option>
                    </select>
                    <div class="error-message" id="productError">Please fill out this field.</div>
                </div>

                <div>
                    <label for="quantity" class="block text-white font-bold text-sm mb-3">Quantity</label>
                    <select id="quantity" name="quantity" required
                            class="form-select w-full px-6 py-4 rounded-xl border-2 border-transparent focus:border-gold focus:outline-none text-navy font-medium text-base appearance-none cursor-pointer"
                            style="background-image: url('data:image/svg+xml;charset=UTF-8,%3csvg xmlns=%27http://www.w3.org/2000/svg%27 viewBox=%270 0 24 24%27 fill=%27none%27 stroke=%27currentColor%27 stroke-width=%272%27 stroke-linecap=%27round%27 stroke-linejoin=%27round%27%3e%3cpolyline points=%276 9 12 15 18 9%27%3e%3c/polyline%3e%3c/svg%3e'); background-repeat: no-repeat; background-position: right 1rem center; background-size: 1.5em 1.5em;">
                        <option value="1x 24x0,33L">1x 24x0,33L</option>
                        <option value="2x 24x0,33L">2x 24x0,33L</option>
                        <option value="3x 24x0,33L">3x 24x0,33L</option>
                        <option value="4x 24x0,33L">4x 24x0,33L</option>
                    </select>
                </div>

                <div class="pt-6">
                    <button type="submit"
                            class="w-full bg-gradient-to-r from-burgundy to-red-800 text-white px-10 py-5 rounded-xl font-black text-lg uppercase tracking-widest hover:scale-105 hover:shadow-[0_15px_40px_rgba(153,27,27,0.5)] transition-all duration-300 shadow-xl">
                        RESERVE NOW
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>

<script>
    document.getElementById('reservationForm').addEventListener('submit', async function(e) {
        e.preventDefault();
        
        const formData = new FormData(this);
        const data = Object.fromEntries(formData);
        
        // Validate
        let isValid = true;
        ['name', 'email', 'zipcode', 'product'].forEach(field => {
            const input = document.getElementById(field);
            const error = document.getElementById(field + 'Error');
            if (!input.value.trim() || (field === 'product' && input.value === '')) {
                error.classList.add('show');
                isValid = false;
            } else {
                error.classList.remove('show');
            }
        });
        
        if (!isValid) return;
        
        // Submit to backend
        try {
            const response = await fetch('/api/reservation', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            });
            
            const result = await response.json();
            
            if (result.success) {
                window.location.href = '/thank-you';
            } else {
                alert(result.message || 'Error submitting reservation');
            }
        } catch (error) {
            alert('Error submitting reservation. Please try again.');
        }
    });
</script>

<%- include('partials/footer') %>
