<%- include('partials/header') %>

<style>
    .gradient-bg-2 {
        background: linear-gradient(135deg, #1e293b 0%, #991b1b 100%);
    }

    .text-gradient {
        background: linear-gradient(135deg, #f59e0b, #fb923c);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .product-card-hover {
        transition: all 0.5s cubic-bezier(0.68, -0.55, 0.265, 1.55);
    }

    .product-card-hover:hover {
        transform: translateY(-15px) scale(1.03);
    }

    .section-divider {
        background: linear-gradient(90deg, transparent, rgba(245, 158, 11, 0.5), transparent);
        height: 2px;
    }
</style>

<!-- Hero Section with Background Image -->
<section class="min-h-[70vh] gradient-bg-2 relative overflow-hidden flex items-center justify-center pt-20">
    <!-- Background Image -->
    <div class="absolute inset-0">
        <img src="/images/about_background.png" alt="About Background" class="w-full h-full object-cover opacity-30">
    </div>
    
    <!-- Gradient Overlay -->
    <div class="absolute inset-0 bg-gradient-to-b from-transparent via-burgundy/30 to-burgundy/50"></div>
    
    <!-- Hero Content -->
    <div class="relative z-10 text-center px-6 py-32">
        <h1 class="font-fredoka text-6xl md:text-8xl lg:text-9xl text-white mb-6 drop-shadow-[0_15px_40px_rgba(0,0,0,0.6)] leading-none tracking-wider">
            <%= t.about.title %>
        </h1>
        <div class="section-divider max-w-md mx-auto mt-8"></div>
    </div>
</section>

<!-- Main Content Section - 3 Alternating Sections -->
<section class="gradient-bg py-20 md:py-32">
    <div class="max-w-7xl mx-auto px-6">

        <!-- Section 1: REDEFINING MODERN ENJOYMENT (Image Right) -->
        <div class="mb-32 md:mb-40">
            <div class="grid md:grid-cols-2 gap-16 md:gap-20 items-center">
                <!-- Text Content Left -->
                <div class="text-white space-y-8">
                    <h2 class="font-fredoka text-4xl md:text-5xl lg:text-7xl text-white leading-tight">
                        <%= t.about.section1.heading %>
                    </h2>
                    <div class="section-divider max-w-xs"></div>
                    <p class="text-xl md:text-2xl font-medium text-amber-100 leading-relaxed">
                        <%= t.about.section1.text %>
                    </p>
                </div>
                
                <!-- Product Image Right -->
                <div class="product-card-hover">
                    <div class="bg-white/10 backdrop-blur-sm rounded-3xl p-10 md:p-12 shadow-2xl border-2 border-gold/30">
                        <img src="/images/flavour_image1.png" alt="Blueberry" class="w-full h-auto max-w-lg mx-auto drop-shadow-2xl">
                    </div>
                </div>
            </div>
        </div>

        <!-- Divider -->
        <div class="section-divider max-w-3xl mx-auto mb-32 md:mb-40"></div>

        <!-- Section 2: REAL PASSION (Image Left) -->
        <div class="mb-32 md:mb-40">
            <div class="grid md:grid-cols-2 gap-16 md:gap-20 items-center">
                <!-- Product Image Left -->
                <div class="order-2 md:order-1 product-card-hover">
                    <div class="bg-white/10 backdrop-blur-sm rounded-3xl p-10 md:p-12 shadow-2xl border-2 border-gold/30">
                        <img src="/images/flavour_image2.png" alt="Watermelon" class="w-full h-auto max-w-lg mx-auto drop-shadow-2xl">
                    </div>
                </div>
                
                <!-- Text Content Right -->
                <div class="order-1 md:order-2 text-white space-y-8">
                    <h2 class="font-fredoka text-4xl md:text-5xl lg:text-7xl text-white leading-tight">
                        <%= t.about.section2.heading1 %><br/>
                        <%= t.about.section2.heading2 %><br/>
                        <%= t.about.section2.heading3 %>
                    </h2>
                    <div class="section-divider max-w-xs"></div>
                    <div class="space-y-6 text-xl md:text-2xl font-medium text-amber-100 leading-relaxed">
                        <p><%= t.about.section2.text1 %></p>
                        <p><%= t.about.section2.text2 %></p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Divider -->
        <div class="section-divider max-w-3xl mx-auto mb-32 md:mb-40"></div>

        <!-- Section 3: COMMUNITY. CULTURE. ENJOYMENT. (Image Right) -->
        <div>
            <div class="grid md:grid-cols-2 gap-16 md:gap-20 items-center">
                <!-- Text Content Left -->
                <div class="text-white space-y-8">
                    <h2 class="font-fredoka text-4xl md:text-5xl lg:text-7xl text-white leading-tight">
                        <%= t.about.section3.heading %><br/>
                        <span class="text-gradient"><%= t.about.section3.community %></span><br/>
                        <span class="text-gradient"><%= t.about.section3.culture %></span><br/>
                        <span class="text-gradient"><%= t.about.section3.enjoyment %></span>
                    </h2>
                    <div class="section-divider max-w-xs"></div>
                    <div class="space-y-6 text-xl md:text-2xl font-medium text-amber-100 leading-relaxed">
                        <p><%= t.about.section3.text1 %></p>
                        <p>
                            <%= t.about.section3.text2 %><br/>
                            <%= t.about.section3.text3 %>
                        </p>
                    </div>
                    <div class="pt-8">
                        <a href="/contact?lang=<%= lang %>" class="inline-flex items-center gap-3 bg-gradient-to-r from-gold to-orange-400 text-navy px-12 py-5 rounded-full font-black text-xl uppercase tracking-wider hover:scale-105 hover:shadow-[0_20px_50px_rgba(245,158,11,0.6)] transition-all duration-300 shadow-xl">
                            <%= t.about.section3.contactButton %>
                        </a>
                    </div>
                </div>
                
                <!-- Product Image Right -->
                <div class="product-card-hover">
                    <div class="bg-white/10 backdrop-blur-sm rounded-3xl p-10 md:p-12 shadow-2xl border-2 border-gold/30">
                        <img src="/images/flavour_image4.png" alt="Zero Watermelon" class="w-full h-auto max-w-lg mx-auto drop-shadow-2xl">
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>

<%- include('partials/footer') %>