<%- include('partials/header') %>

<!-- Thank You Section -->
<section class="min-h-screen gradient-bg relative overflow-hidden flex items-center justify-center pt-20">
    <div class="absolute inset-0 opacity-10">
        <div class="absolute top-0 left-0 w-full h-full" style="background-image: radial-gradient(circle, rgba(245, 158, 11, 0.3) 1px, transparent 1px); background-size: 50px 50px;"></div>
    </div>

    <div class="relative z-10 max-w-4xl mx-auto px-6 text-center py-20">
        
        <!-- Main Heading -->
        <h1 class="font-fredoka text-5xl md:text-6xl lg:text-7xl text-white mb-12 leading-tight drop-shadow-2xl">
            <%= t.thankYou.title %>
        </h1>

        <!-- Confirmation Message -->
        <div class="space-y-6 mb-12">
            <p class="text-xl md:text-2xl text-white font-medium leading-relaxed">
                <%= t.thankYou.message1 %><br/>
                <%= t.thankYou.message2 %>
            </p>
        </div>

        <!-- Icons and Messages -->
        <div class="space-y-4 mb-12">
            <p class="text-xl md:text-2xl text-white font-bold flex items-center justify-center gap-3">
                <span class="text-3xl">üëë</span> <%= t.thankYou.confirmed %>
            </p>
            <p class="text-xl md:text-2xl text-white font-bold flex items-center justify-center gap-3">
                <span class="text-3xl">üçÄ</span> <%= t.thankYou.luck %>
            </p>
        </div>

        <!-- Share Message -->
        <p class="text-xl md:text-2xl text-white font-medium mb-8">
            <%= t.thankYou.share %>
        </p>

        <!-- Share Button -->
        <button 
            onclick="shareWebsite()"
            class="inline-flex items-center gap-3 bg-white text-navy px-10 py-4 rounded-full font-black text-lg uppercase tracking-wider hover:scale-105 hover:shadow-[0_20px_50px_rgba(255,255,255,0.3)] transition-all duration-300 shadow-xl"
        >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"></path>
            </svg>
            <%= t.thankYou.shareButton %>
        </button>

    </div>
</section>

<script>
    function shareWebsite() {
        if (navigator.share) {
            navigator.share({
                title: 'Horn Dawg Drinks',
                text: 'Check out Horn Dawg Drinks - Reserve your spot for the 2026 launch!',
                url: window.location.origin
            })
            .then(() => console.log('Successful share'))
            .catch((error) => console.log('Error sharing:', error));
        } else {
            // Fallback: Copy to clipboard
            const url = window.location.origin;
            navigator.clipboard.writeText(url).then(() => {
                alert('Link copied to clipboard!');
            }).catch(err => {
                console.error('Could not copy text: ', err);
            });
        }
    }
</script>

<%- include('partials/footer') %>