<%- include('partials/header') %>

<style>
    .gradient-bg-2 {
        background: linear-gradient(135deg, #1e293b 0%, #991b1b 100%);
    }

    .text-gradient {
        background: linear-gradient(135deg, #f59e0b, #fb923c);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .animate-bounce-slow {
        animation: bounce 2.5s infinite;
    }

    @keyframes bounce {
        0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
        40% { transform: translateY(-25px); }
        60% { transform: translateY(-15px); }
    }

    .btn-glow:hover {
        box-shadow: 0 20px 50px rgba(245, 158, 11, 0.6);
    }

    .card-hover {
        transition: all 0.5s cubic-bezier(0.68, -0.55, 0.265, 1.55);
    }

    .card-hover:hover {
        transform: translateY(-15px) scale(1.03);
    }

    .product-card-hover {
        transition: all 0.5s ease;
    }

    .product-card-hover:hover {
        transform: translateY(-10px);
    }

    .pulse-glow {
        animation: pulseGlow 6s ease-in-out infinite;
    }

    @keyframes pulseGlow {
        0%, 100% { opacity: 0.1; }
        50% { opacity: 0.2; }
    }
</style>

<!-- Hero Section -->
<section class="min-h-screen gradient-bg relative overflow-hidden flex items-center justify-center pt-20">
    <!-- Background Image -->
    <div class="absolute inset-0 opacity-15 pulse-glow">
        <img src="/images/background.png" alt="Background" class="w-full h-full object-cover">
    </div>
    
    <!-- Gradient Overlay -->
    <div class="absolute inset-0 bg-gradient-radial from-gold/10 to-transparent"></div>
    
    <!-- Hero Content -->
    <div class="relative z-10 text-center px-6 py-20">
        <h1 class="font-fredoka text-6xl md:text-8xl lg:text-9xl text-white mb-6 drop-shadow-[0_15px_40px_rgba(0,0,0,0.6)] leading-none">
            <%= t.home.title %>
        </h1>
        <h2 class="font-fredoka text-5xl md:text-7xl lg:text-8xl text-gradient mb-8 tracking-wider">
            <%= t.home.subtitle %>
        </h2>
        <p class="text-white text-xl md:text-3xl font-light mb-12 max-w-4xl mx-auto drop-shadow-lg leading-relaxed">
            <%= t.home.tagline %>
        </p>
        <a href="/reservation?lang=<%= lang %>" class="inline-block bg-gradient-to-r from-gold to-orange-400 text-navy px-12 py-5 rounded-full font-black text-xl uppercase tracking-widest hover:scale-105 btn-glow transition-all duration-300 shadow-xl">
            <%= t.home.reserveNow %>
        </a>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 animate-bounce-slow">
        <svg class="w-12 h-12 text-gold drop-shadow-[0_0_10px_rgba(245,158,11,0.5)]" fill="currentColor" viewBox="0 0 24 24">
            <path d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
        </svg>
    </div>
</section>

